{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "./dist/js",
    "rootDir": "./src/ts",
    "jsx": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["es2020", "DOM", "DOM.Iterable"]
  },
  "include": [
    "src/ts/**/*.ts",
    "src/ts/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist/js/**/*.js"
  ]
}